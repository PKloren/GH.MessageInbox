@model MessageListViewModel

@{
    ViewData["Title"] = "Berichten Box";
}

<div class="text-center">
    <h1 class="display-4">Welkom bij de Toeslagen Hackathon</h1>
    <p>Kies jouw team om de berichten te zoeken.</p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="Index" method="get">
            <div class="form-group">
                <label asp-for="Team" class="control-label"></label>
                <select asp-for="Team" class="form-control" asp-items="@(new SelectList(Model.Teams))">
                    <option></option>
                </select>
                <span asp-validation-for="Team" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zoek</button>
        </form>
    </div>
    <div>
        <hr/>
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>@Html.DisplayNameForInnerType((MessageViewModel m) => m.Team)</th>
                <th>@Html.DisplayNameForInnerType((MessageViewModel m) => m.Subject)</th>
                <th>@Html.DisplayNameForInnerType((MessageViewModel m) => m.MessageType)</th>
                <th>@Html.DisplayNameForInnerType((MessageViewModel m) => m.Url)</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Messages!)
            {
                <tr>
                    <td>
                        @item.Team
                    </td>
                    <td>
                        @item.Subject
                    </td>
                    <td>
                        @item.MessageType
                    </td>
                    <td>
                        <a href="@item.Url" target="_blank">Download</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
